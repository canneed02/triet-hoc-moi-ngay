---
layout: null
---
{
  "nodes": [
    {% for post in site.posts %}
    {
      "id": "{{ post.url }}",
      "title": "{{ post.title | escape }}",
      "date": "{{ post.date }}",
      "tags": [{% if post.tags %}{% for tag in post.tags %}"{{ tag }}"{% unless forloop.last %},{% endunless %}{% endfor %}{% endif %}]
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "links": [
    {% for post in site.posts %}
      {% if post.tags %}
        {% for other in site.posts %}
          {% if other.tags and other.url != post.url %}
            {% for tag in post.tags %}
              {% if other.tags contains tag %}
              {"source": "{{ post.url }}", "target": "{{ other.url }}", "tag": "{{ tag }}"}{% unless forloop.last %},{% endunless %}
              {% endif %}
            {% endfor %}
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  ]
}
